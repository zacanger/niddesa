[
    {
        "source_sentence": "Cūḷaniddesa",
        "translation": "Cūḷaniddesa",
        "source": "cnd1:0.1_0"
    },
    {
        "source_sentence": "Pārāyanavaggagāthā",
        "translation": "Pārāyanavaggagāthā",
        "source": "cnd1:0.2_0"
    },
    {
        "source_sentence": "1. Vatthugāthā",
        "translation": "1. Vatthugāthā",
        "source": "cnd1:0.3_0"
    },
    {
        "source_sentence": "Namo tassa Bhagavato Arahato Sammāsambuddhassa.",
        "translation": "Reverence to him, the Fortunate One, the Worthy One, the Perfect Sambuddha",
        "source": "cnd1:0.4_0"
    },
    {
        "source_sentence": "Kosalānaṁ purā rammā,",
        "translation": "From the delightful city of the Kosalans",
        "source": "cnd1:1.1_0"
    },
    {
        "source_sentence": "agamā dakkhiṇāpathaṁ;",
        "translation": "returned to the south of the path.",
        "source": "cnd1:1.2_0"
    },
    {
        "source_sentence": "Ākiñcaññaṁ patthayāno,",
        "translation": "one who has nothing, longing for nothingness,",
        "source": "cnd1:1.3_0"
    },
    {
        "source_sentence": "brāhmaṇo mantapāragū.",
        "translation": "a brahmin counselor,",
        "source": "cnd1:1.4_0"
    },
    {
        "source_sentence": "So assakassa visaye,",
        "translation": "In the locality of Assaka,",
        "source": "cnd1:2.1_0"
    },
    {
        "source_sentence": "maḷakassa samāsane;",
        "translation": "in the Māḷha’s Wood",
        "source": "cnd1:2.2_0"
    },
    {
        "source_sentence": "Vasi godhāvarīkūle,",
        "translation": "Like a fancy cow",
        "source": "cnd1:2.3_0"
    },
    {
        "source_sentence": "uñchena ca phalena ca.",
        "translation": "and thunder.",
        "source": "cnd1:2.4_0"
    },
    {
        "source_sentence": "Tasseva upanissāya,",
        "translation": "After living relying on this very seat,",
        "source": "cnd1:3.1_0"
    },
    {
        "source_sentence": "gāmo ca vipulo ahu;",
        "translation": "And the villages were abundant,",
        "source": "cnd1:3.2_0"
    },
    {
        "source_sentence": "Tato jātena āyena,",
        "translation": "and because of that it was born into a change of knowledge.",
        "source": "cnd1:3.3_0"
    },
    {
        "source_sentence": "mahāyaññamakappayi.",
        "translation": "he took a great sacrifice,",
        "source": "cnd1:3.4_0"
    },
    {
        "source_sentence": "Mahāyaññaṁ yajitvāna,",
        "translation": "after performing a great sacrifice,",
        "source": "cnd1:4.1_0"
    },
    {
        "source_sentence": "puna pāvisi assamaṁ;",
        "translation": "as I entered a hermitage.",
        "source": "cnd1:4.2_0"
    },
    {
        "source_sentence": "Tasmiṁ paṭipaviṭṭhamhi,",
        "translation": "and in that the path with its own insight,",
        "source": "cnd1:4.3_0"
    },
    {
        "source_sentence": "añño āgañchi brāhmaṇo.",
        "translation": "along with another brahmin.",
        "source": "cnd1:4.4_0"
    },
    {
        "source_sentence": "Ugghaṭṭapādo tasito,",
        "translation": "held up like a polished feet.",
        "source": "cnd1:5.1_0"
    },
    {
        "source_sentence": "paṅkadanto rajassiro;",
        "translation": "thirsty, you’ll cry out.",
        "source": "cnd1:5.2_0"
    },
    {
        "source_sentence": "So ca naṁ upasaṅkamma,",
        "translation": "After approaching (the first brahmin),",
        "source": "cnd1:5.3_0"
    },
    {
        "source_sentence": "satāni pañca yācati.",
        "translation": "five hundred coins who were begged for,",
        "source": "cnd1:5.4_0"
    },
    {
        "source_sentence": "Tamenaṁ bāvarī disvā,",
        "translation": "After seeing him,",
        "source": "cnd1:6.1_0"
    },
    {
        "source_sentence": "āsanena nimantayi;",
        "translation": "he invited him to a seat.",
        "source": "cnd1:6.2_0"
    },
    {
        "source_sentence": "Sukhañca kusalaṁ pucchi,",
        "translation": "after asking happiness and happiness,",
        "source": "cnd1:6.3_0"
    },
    {
        "source_sentence": "idaṁ vacanamabravi.",
        "translation": "this is the word of the statement.",
        "source": "cnd1:6.4_0"
    },
    {
        "source_sentence": "“Yaṁ kho mama deyyadhammaṁ,",
        "translation": "“Whatever kind of gift should be given in me,",
        "source": "cnd1:7.1_0"
    },
    {
        "source_sentence": "Sabbaṁ visajjitaṁ mayā;",
        "translation": "I have seen them all.",
        "source": "cnd1:7.2_0"
    },
    {
        "source_sentence": "Anujānāhi me brahme,",
        "translation": "please excuse me.",
        "source": "cnd1:7.3_0"
    },
    {
        "source_sentence": "Natthi pañcasatāni me”.",
        "translation": "there is no five hundred wishes.”",
        "source": "cnd1:7.4_0"
    },
    {
        "source_sentence": "“Sace me yācamānassa,",
        "translation": "“If anyone is asked for me,",
        "source": "cnd1:8.1_0"
    },
    {
        "source_sentence": "bhavaṁ nānupadassati;",
        "translation": "merely I will not think of the world",
        "source": "cnd1:8.2_0"
    },
    {
        "source_sentence": "Sattame divase tuyhaṁ,",
        "translation": "on the seventh day.",
        "source": "cnd1:8.3_0"
    },
    {
        "source_sentence": "muddhā phalatu sattadhā”.",
        "translation": "may the head split into seven pieces!”",
        "source": "cnd1:8.4_0"
    },
    {
        "source_sentence": "Abhisaṅkharitvā kuhako,",
        "translation": "Having made such a shelter ascended,",
        "source": "cnd1:9.1_0"
    },
    {
        "source_sentence": "bheravaṁ so akittayi;",
        "translation": "Energy frightened,",
        "source": "cnd1:9.2_0"
    },
    {
        "source_sentence": "Tassa taṁ vacanaṁ sutvā,",
        "translation": "When they heard these words,",
        "source": "cnd1:9.3_0"
    },
    {
        "source_sentence": "bāvarī dukkhito ahu.",
        "translation": "that crushed to suffering.",
        "source": "cnd1:9.4_0"
    },
    {
        "source_sentence": "Ussussati anāhāro,",
        "translation": "and lacking fuel.",
        "source": "cnd1:10.1_0"
    },
    {
        "source_sentence": "sokasallasamappito;",
        "translation": "measurable in retreat.",
        "source": "cnd1:10.2_0"
    },
    {
        "source_sentence": "Athopi evaṁ cittassa,",
        "translation": "and thought in the mind,",
        "source": "cnd1:10.3_0"
    },
    {
        "source_sentence": "jhāne na ramatī mano.",
        "translation": "doesn’t delight in absorption.",
        "source": "cnd1:10.4_0"
    },
    {
        "source_sentence": "Utrastaṁ dukkhitaṁ disvā,",
        "translation": "Strapped by suffering,",
        "source": "cnd1:11.1_0"
    },
    {
        "source_sentence": "devatā atthakāminī;",
        "translation": "a Deities",
        "source": "cnd1:11.2_0"
    },
    {
        "source_sentence": "Bāvariṁ upasaṅkamma,",
        "translation": "I approached Bāvari,",
        "source": "cnd1:11.3_0"
    },
    {
        "source_sentence": "idaṁ vacanamabravi.",
        "translation": "this is the word of the statement.",
        "source": "cnd1:11.4_0"
    },
    {
        "source_sentence": "“Na so muddhaṁ pajānāti,",
        "translation": "“He doesn’t know the head;",
        "source": "cnd1:12.1_0"
    },
    {
        "source_sentence": "kuhako so dhanatthiko;",
        "translation": "is the best of wealth.",
        "source": "cnd1:12.2_0"
    },
    {
        "source_sentence": "Muddhani muddhapāte vā,",
        "translation": "head or head-splitting,",
        "source": "cnd1:12.3_0"
    },
    {
        "source_sentence": "ñāṇaṁ tassa na vijjati”.",
        "translation": "But you have no knowledge.”",
        "source": "cnd1:12.4_0"
    },
    {
        "source_sentence": "“Bhotī carahi jānāti,",
        "translation": "“He knows magic,",
        "source": "cnd1:13.1_0"
    },
    {
        "source_sentence": "Taṁ me akkhāhi pucchitā;",
        "translation": "Please answer my question.",
        "source": "cnd1:13.2_0"
    },
    {
        "source_sentence": "Muddhaṁ muddhādhipātañca,",
        "translation": "the head and the head-splitting,",
        "source": "cnd1:13.3_0"
    },
    {
        "source_sentence": "Taṁ suṇoma vaco tava”.",
        "translation": "let us hear what you have to say.”",
        "source": "cnd1:13.4_0"
    },
    {
        "source_sentence": "“Ahampetaṁ na jānāmi,",
        "translation": "“I don’t know that",
        "source": "cnd1:14.1_0"
    },
    {
        "source_sentence": "ñāṇaṁ mettha na vijjati;",
        "translation": "I have no knowledge about this.",
        "source": "cnd1:14.2_0"
    },
    {
        "source_sentence": "Muddhani muddhādhipāte ca,",
        "translation": "head and head-splitting,",
        "source": "cnd1:14.3_0"
    },
    {
        "source_sentence": "jinānaṁ hettha dassanaṁ”.",
        "translation": "for those who see it.”",
        "source": "cnd1:14.4_0"
    },
    {
        "source_sentence": "“Atha ko carahi jānāti,",
        "translation": "“Then who knows what",
        "source": "cnd1:15.1_0"
    },
    {
        "source_sentence": "asmiṁ pathavimaṇḍale;",
        "translation": "in this wide open land.",
        "source": "cnd1:15.2_0"
    },
    {
        "source_sentence": "Muddhaṁ muddhādhipātañca,",
        "translation": "the head and the head-splitting,",
        "source": "cnd1:15.3_0"
    },
    {
        "source_sentence": "taṁ me akkhāhi devate”.",
        "translation": "please explain this to me.”",
        "source": "cnd1:15.4_0"
    },
    {
        "source_sentence": "“Purā kapilavatthumhā,",
        "translation": "“From Kapilavatthu",
        "source": "cnd1:16.1_0"
    },
    {
        "source_sentence": "nikkhanto lokanāyako;",
        "translation": "and out,",
        "source": "cnd1:16.2_0"
    },
    {
        "source_sentence": "Apacco okkākarājassa,",
        "translation": "he is Okkāka’s heritage,",
        "source": "cnd1:16.3_0"
    },
    {
        "source_sentence": "sakyaputto pabhaṅkaro.",
        "translation": "a Sakyan’s son, a light-maker.",
        "source": "cnd1:16.4_0"
    },
    {
        "source_sentence": "So hi brāhmaṇa sambuddho,",
        "translation": "He is the Awakened One",
        "source": "cnd1:17.1_0"
    },
    {
        "source_sentence": "sabbadhammāna pāragū;",
        "translation": "gone beyond all things,",
        "source": "cnd1:17.2_0"
    },
    {
        "source_sentence": "Sabbābhiññābalappatto,",
        "translation": "I have attained all deep knowledges and strength,",
        "source": "cnd1:17.3_0"
    },
    {
        "source_sentence": "sabbadhammesu cakkhumā;",
        "translation": "The seers",
        "source": "cnd1:17.4_0"
    },
    {
        "source_sentence": "Sabbakammakkhayaṁ patto,",
        "translation": "I’ve attained the ending of all deeds.",
        "source": "cnd1:17.5_0"
    },
    {
        "source_sentence": "vimutto upadhikkhaye.",
        "translation": "freed in the end of rebirth,",
        "source": "cnd1:17.6_0"
    },
    {
        "source_sentence": "Buddho so bhagavā loke,",
        "translation": "the Buddha in the world,",
        "source": "cnd1:18.1_0"
    },
    {
        "source_sentence": "dhammaṁ deseti cakkhumā;",
        "translation": "the Seer teaches Dhamma,",
        "source": "cnd1:18.2_0"
    },
    {
        "source_sentence": "Taṁ tvaṁ gantvāna pucchassu,",
        "translation": "after going there you asked:",
        "source": "cnd1:18.3_0"
    },
    {
        "source_sentence": "so te taṁ byākarissati”.",
        "translation": "he will answer to you.”",
        "source": "cnd1:18.4_0"
    },
    {
        "source_sentence": "Sambuddhoti vaco sutvā,",
        "translation": "Having heard the word of the Buddha,",
        "source": "cnd1:19.1_0"
    },
    {
        "source_sentence": "udaggo bāvarī ahu;",
        "translation": "stores up,",
        "source": "cnd1:19.2_0"
    },
    {
        "source_sentence": "Sokassa tanuko āsi,",
        "translation": "to the griefless,",
        "source": "cnd1:19.3_0"
    },
    {
        "source_sentence": "pītiñca vipulaṁ labhi.",
        "translation": "and eloquence,",
        "source": "cnd1:19.4_0"
    },
    {
        "source_sentence": "So bāvarī attamano udaggo,",
        "translation": "Bāvari, uplifted and elated,",
        "source": "cnd1:20.1_0"
    },
    {
        "source_sentence": "Taṁ devataṁ pucchati vedajāto;",
        "translation": "Your Majesty asks him about this.",
        "source": "cnd1:20.2_0"
    },
    {
        "source_sentence": "“Katamamhi gāme nigamamhi vā pana,",
        "translation": "“In which village, or in which town,",
        "source": "cnd1:20.3_0"
    },
    {
        "source_sentence": "Katamamhi vā janapade lokanātho;",
        "translation": "in which country, is the lord of the world?",
        "source": "cnd1:20.4_0"
    },
    {
        "source_sentence": "Yattha gantvāna passemu,",
        "translation": "where they see their heads,",
        "source": "cnd1:20.5_0"
    },
    {
        "source_sentence": "Sambuddhaṁ dvipaduttamaṁ”.",
        "translation": "I am the supreme Buddha.”",
        "source": "cnd1:20.6_0"
    },
    {
        "source_sentence": "“Sāvatthiyaṁ kosalamandire jino,",
        "translation": "“The Victor is in the Kosalan’s city, Sāvatthī,",
        "source": "cnd1:21.1_0"
    },
    {
        "source_sentence": "Pahūtapañño varabhūrimedhaso;",
        "translation": "he has much wisdom, excellent and great intelligence,",
        "source": "cnd1:21.2_0"
    },
    {
        "source_sentence": "So sakyaputto vidhuro anāsavo,",
        "translation": "that Sakyan’s son, who is free from burden and pollutant,",
        "source": "cnd1:21.3_0"
    },
    {
        "source_sentence": "Muddhādhipātassa vidū narāsabho”.",
        "translation": "that Bull of a Man has understanding of head-splitting.”",
        "source": "cnd1:21.4_0"
    },
    {
        "source_sentence": "Tato āmantayī sisse,",
        "translation": "Therefore he addressed",
        "source": "cnd1:22.1_0"
    },
    {
        "source_sentence": "brāhmaṇe mantapāragū;",
        "translation": "a Vedas, a brahmin,",
        "source": "cnd1:22.2_0"
    },
    {
        "source_sentence": "“Etha māṇavā akkhissaṁ,",
        "translation": "“Come, don’t I explain, don’t escape.",
        "source": "cnd1:22.3_0"
    },
    {
        "source_sentence": "suṇātha vacanaṁ mama.",
        "translation": "listen to me,",
        "source": "cnd1:22.4_0"
    },
    {
        "source_sentence": "Yasseso dullabho loke,",
        "translation": "Since the world is so rare in the world,",
        "source": "cnd1:23.1_0"
    },
    {
        "source_sentence": "pātubhāvo abhiṇhaso;",
        "translation": "the supreme surgeon,",
        "source": "cnd1:23.2_0"
    },
    {
        "source_sentence": "Svājja lokamhi uppanno,",
        "translation": "That’s arisen in the world,",
        "source": "cnd1:23.3_0"
    },
    {
        "source_sentence": "sambuddho iti vissuto;",
        "translation": "is a fully awakened Buddha,",
        "source": "cnd1:23.4_0"
    },
    {
        "source_sentence": "Khippaṁ gantvāna sāvatthiṁ,",
        "translation": "Having gone quickly to Sāvatthī,",
        "source": "cnd1:23.5_0"
    },
    {
        "source_sentence": "passavho dvipaduttamaṁ”.",
        "translation": "see the best, supreme person!”",
        "source": "cnd1:23.6_0"
    },
    {
        "source_sentence": "“Kathaṁ carahi jānemu,",
        "translation": "“How do you know this?",
        "source": "cnd1:24.1_0"
    },
    {
        "source_sentence": "disvā buddhoti brāhmaṇa;",
        "translation": "and the Buddha, brahmin.",
        "source": "cnd1:24.2_0"
    },
    {
        "source_sentence": "Ajānataṁ no pabrūhi,",
        "translation": "We don’t know, please tell us,",
        "source": "cnd1:24.3_0"
    },
    {
        "source_sentence": "yathā jānemu taṁ mayaṁ”.",
        "translation": "so we have known.”",
        "source": "cnd1:24.4_0"
    },
    {
        "source_sentence": "“Āgatāni hi mantesu,",
        "translation": "“There has come to us in the Vedas,",
        "source": "cnd1:25.1_0"
    },
    {
        "source_sentence": "mahāpurisalakkhaṇā;",
        "translation": "are all in your body.",
        "source": "cnd1:25.2_0"
    },
    {
        "source_sentence": "Dvattiṁsāni ca byākkhātā,",
        "translation": "They declare two things:",
        "source": "cnd1:25.3_0"
    },
    {
        "source_sentence": "samattā anupubbaso.",
        "translation": "gradually cooling,",
        "source": "cnd1:25.4_0"
    },
    {
        "source_sentence": "Yassete honti gattesu,",
        "translation": "There are ascetics on your limbs,",
        "source": "cnd1:26.1_0"
    },
    {
        "source_sentence": "mahāpurisalakkhaṇā;",
        "translation": "are all in your body.",
        "source": "cnd1:26.2_0"
    },
    {
        "source_sentence": "Dveyeva tassa gatiyo,",
        "translation": "there were two destinies,",
        "source": "cnd1:26.3_0"
    },
    {
        "source_sentence": "tatiyā hi na vijjati.",
        "translation": "for a third isn’t found.",
        "source": "cnd1:26.4_0"
    },
    {
        "source_sentence": "Sace agāraṁ āvasati,",
        "translation": "If the house is kept,",
        "source": "cnd1:27.1_0"
    },
    {
        "source_sentence": "vijeyya pathaviṁ imaṁ;",
        "translation": "I conquered this land.",
        "source": "cnd1:27.2_0"
    },
    {
        "source_sentence": "Adaṇḍena asatthena,",
        "translation": "Without rod or sword,",
        "source": "cnd1:27.3_0"
    },
    {
        "source_sentence": "dhammena anusāsati.",
        "translation": "In accordance with the Teaching:",
        "source": "cnd1:27.4_0"
    },
    {
        "source_sentence": "Sace ca so pabbajati,",
        "translation": "But if he goes forth,",
        "source": "cnd1:28.1_0"
    },
    {
        "source_sentence": "Agārā anagāriyaṁ;",
        "translation": "homeless,",
        "source": "cnd1:28.2_0"
    },
    {
        "source_sentence": "Vivaṭṭacchado sambuddho,",
        "translation": "the Sambuddha, who is awakened,",
        "source": "cnd1:28.3_0"
    },
    {
        "source_sentence": "Arahā bhavati anuttaro.",
        "translation": "the perfected one, the unsurpassed.",
        "source": "cnd1:28.4_0"
    },
    {
        "source_sentence": "Jātiṁ gottañca lakkhaṇaṁ,",
        "translation": "About my birth, family,",
        "source": "cnd1:29.1_0"
    },
    {
        "source_sentence": "mante sisse punāpare;",
        "translation": "a thousand messages, and acquaintances;",
        "source": "cnd1:29.2_0"
    },
    {
        "source_sentence": "Muddhaṁ muddhādhipātañca,",
        "translation": "the head and the head-splitting,",
        "source": "cnd1:29.3_0"
    },
    {
        "source_sentence": "manasāyeva pucchatha.",
        "translation": "in your mind you must ask me.",
        "source": "cnd1:29.4_0"
    },
    {
        "source_sentence": "Anāvaraṇadassāvī,",
        "translation": "seeing the danger in world,",
        "source": "cnd1:30.1_0"
    },
    {
        "source_sentence": "yadi buddho bhavissati;",
        "translation": "If the Buddha shall be the Buddha,",
        "source": "cnd1:30.2_0"
    },
    {
        "source_sentence": "Manasā pucchite pañhe,",
        "translation": "The questions that are asked in your mind,",
        "source": "cnd1:30.3_0"
    },
    {
        "source_sentence": "vācāya visajjessati”.",
        "translation": "for speech.”",
        "source": "cnd1:30.4_0"
    },
    {
        "source_sentence": "Bāvarissa vaco sutvā,",
        "translation": "After hearing Bāvari’s words,",
        "source": "cnd1:31.1_0"
    },
    {
